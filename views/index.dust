      <div class='row pizza-row' >
        <div class='span2'>
          <div class='image'style = "padding-bottom:50px; 	">
            <img  alt="Pizza 0" src="../images/0000000000000000000000000000000" />
          </div>

          <div class='details'>
					<div class="controls" ><input class="string required" id="order_amount" name="user[orderAmount]" size="50" type="number" value="" placeholder="Enter Amount"/></div>
					</div>
					<div class='details'>
					<div class="controls"><input class="string required" id="order_amount" name="user[orderDescription]" size="50" type="text" value="" placeholder="Description"/></div>
					</div>

          </div>
        </div>

      </div>
			<div class='form-actions'>
		<input class="btn btn btn-primary" name="commit" type="submit" value="Submit" />
		</div>
