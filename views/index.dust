			<button class="close" data-dismiss="alert">&times;</button>
			{desc}
		</div>
	{/message}
<form accept-charset="UTF-8" action="orderConfirm" autocomplete="off" class="simple_form form-horizontal new_user" id="new_user" method="post" novalidate="novalidate">
